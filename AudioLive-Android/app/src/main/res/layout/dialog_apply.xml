<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_127"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_bg">

        <TextView
            android:id="@+id/tip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_13"
            android:textColor="@color/apply_color"
            android:text="连麦申请"/>

        <TextView
            android:id="@+id/tip_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_13"
            android:textColor="@color/apply_text_color"
            android:layout_below="@+id/tip_title"
            android:text="123456申请连麦"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_44"
            android:background="@color/apply_cancel_color"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tip_cancel"
                android:layout_width="@dimen/dp_135"
                android:layout_height="match_parent"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_17"
                android:gravity="center"
                android:text="取消"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/apply_cancel_color"/>

            <TextView
                android:id="@+id/tip_confirm"
                android:layout_width="@dimen/dp_134"
                android:layout_height="match_parent"
                android:textColor="@color/text_enable"
                android:textSize="@dimen/sp_17"
                android:gravity="center"
                android:text="确定"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>