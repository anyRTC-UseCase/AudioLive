<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_177"
    android:layout_height="@dimen/dp_199"
    android:orientation="vertical"
    android:background="@drawable/shape_info_item_bg">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_11"
        android:text="ID："
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【】"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/item_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="延迟：0m"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/item_packet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="丢包率：0.00%"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_11"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/vol_small"
            android:layout_gravity="center"/>

        <SeekBar
            android:id="@+id/item_seek"
            android:layout_width="@dimen/dp_130"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:progress="0"
            android:max="255"
            android:maxHeight="@dimen/dp_3"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@null"/>


    </LinearLayout>




</LinearLayout>